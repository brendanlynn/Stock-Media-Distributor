<Window x:Class="Brendan_Stock_Media_Distributor.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Brendan_Stock_Media_Distributor"
        mc:Ignorable="d"
        Title="Brendan Stock Media Distributor" Height="450" Width="675" WindowStyle="None" BorderThickness="0" ResizeMode="NoResize">
    <Grid>
        <Image Name="imgDisplay" Source="/SplashScreen_Back.jpg" />
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Label Content="Stock Media Distributor" FontWeight="Bold" FontSize="50" Foreground="Red" HorizontalContentAlignment="Center" VerticalContentAlignment="Bottom"/>
            <Label Content="created by Brendan Lynn" FontWeight="Bold" FontSize="30" Foreground="Red" Grid.Row="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Top"/>
        </Grid>
    </Grid>
</Window>
